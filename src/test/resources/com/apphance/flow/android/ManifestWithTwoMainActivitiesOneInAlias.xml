<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:apphance="http://apphance.com/android"
          package="com.apphance.flowTest.android"
          android:versionCode="42"
          android:versionName="1.0.1">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission
            android:name="android.permission.CHANGE_WIFI_STATE"
            apphance:only="true"/>

    <instrumentation android:name="com.apphance.android.ApphanceInstrumentation"
                     android:targetPackage="com.apphance.flowTest.android" apphance:only="true"/>

    <application android:label="@string/app_name"
                 android:icon="@drawable/icon">
        <activity
                android:label="@string/app_name"
                android:name="TestActivity">
            <intent-filter>
                <action android:name="com.apphance.android.LAUNCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity-alias
                android:label="@string/app_name"
                android:name="AliasTestActivity"
                apphance:only="true"
                android:targetActivity="TestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity-alias>

        <activity android:label="@string/app_name" android:launchMode="singleTop" android:name=".ui.SecondMainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="pl.morizon.action.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
                android:label="@string/app_name"
                android:name="AnotherActivity"
                apphance:only="true">
        </activity>
    </application>

</manifest>